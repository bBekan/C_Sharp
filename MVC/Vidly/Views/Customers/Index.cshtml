@model IEnumerable<Vidly.Models.Customer>

@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>

<p>
    <a role="button" class="btn btn-success" asp-action="Create">New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsSubscribedToNewsletter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MembershipId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthdate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSubscribedToNewsletter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Membership.Name)
            </td>
            <td>
                @{string date = item.GetDate();}
                @Html.DisplayFor(modelItem => date)
            </td>
            <td>
                <a class="btn btn-dark" role="button" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <a class="btn btn-dark" role="button" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a class="btn btn-danger" role="button" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
