@using Vidly.ViewModels
@model CustomerMembership
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string birthdate = Model.Customer.GetDate();
    string membership = Model.Memberships.Single(m => m.Id == Model.Customer.MembershipId).Name;
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.IsSubscribedToNewsletter)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.IsSubscribedToNewsletter)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.MembershipId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => membership)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Birthdate)
        </dt>
        <dd class = "col-sm-10">
